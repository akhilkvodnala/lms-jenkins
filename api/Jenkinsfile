pipeline {
    agent {
    node {
        label 'docker'
         }
        }
    environment {
    dockerhub=credentials('docker_hub')
    }
    stages{
        stage('Docker Build') {
            steps {
                sh 'cd api && docker build -t shahidafrid/backend .'
             }
          }
        stage('Docker Login') {
            steps {
                sh 'echo $dockerhub_PSW | docker login -u $dockerhub_USR --password-stdin'
            }
          }
        stage('Docker Push') {
            steps {
                sh 'docker push shahidafrid/backend'
		sh 'docker container run -dt --name api -p 3000:3000 shahidafrid/backend'
            }
          }
        stage('Remove old docker images') {
            steps {
                sh 'docker rmi -f shahidafrid/backend'
              }
          }
        stage('creating database container') {
            steps {
                sh 'docker container rm --force lmsdb'
                sh 'docker run -d -p 5432:5432 --network lmsnetwork -e POSTGRES_PASSWORD=password --name lmsdb postgres'
                }
           }
        stage('Running the docker container') {
            steps {
                sh 'docker container rm --force api'
                sh 'docker run -d -p 3000:3000 --network lmsnetwork -e DATABASE_URL=postgresql://postgres:password@lmsdb:5432/postgres --name api -e PORT=3000 -e MODE=local shahidafrid/backend'
                }
              }
        }
  }
